<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Excel File</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Set fixed height and make tbody scrollable */
        .table-container {
            max-height: 400px; /* Set the maximum height for the table */
            overflow-y: auto; /* Enable vertical scrollbar */
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Upload Excel File</h1>
        <form class="mt-3" action="/sendfiles/upload" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Choose Excel File:</label>
                <input type="file" class="form-control-file" id="file" name="file">
            </div>
            <button type="submit" class="btn btn-primary">Upload</button>
        </form>

        <% if (Array.isArray(dt) && dt.length > 0) { %>
            <h2 class="mt-5">Data from Uploaded File</h2>
            <!-- Add container for scrollable table -->
            <div class="table-container">
                <table class="table">
                    <thead>
                        <tr>
                            <% Object.keys(dt[0]).forEach(function(key) { %>
                                <th scope="col"><%= key %></th>
                            <% }) %>
                        </tr>
                    </thead>
                    <tbody>
                        <% dt.forEach(function(row) { %>
                            <tr>
                                <% Object.values(row).forEach(function(value) { %>
                                    <td><%= value %></td>
                                <% }) %>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <p class="mt-5">No data available.</p>
        <% } %>
    </div>

    <!-- Include Bootstrap JS (optional, only if you need it) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
